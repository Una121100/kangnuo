.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  background:#fff;
  border-top: 1px solid #eee;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 10px 0 25px;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}
.active {
  color: var(--brand);
}
.label {
  margin-top: 4px;
}
