.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  background: linear-gradient(90deg, #e0f7ff 0%, #b3e5fc 100%);
  border-top: 1px solid #eee;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 12px 0;
  color: var(--muted);
}
.active {
  color: var(--brand);
  font-weight: 600;
}
