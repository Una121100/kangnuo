.product-card {
  overflow: hidden;
  /* margin: 12px 0; */
}

.cover {
  width: 100%;
  height: 180px;
}

.content { padding: 12px; }

.row { display: flex; justify-content: space-between; align-items: center; }
.title { font-size: 16px; font-weight: 600; display:block; overflow:hidden; text-overflow:ellipsis; white-space:nowrap; }
.tag { font-size: 12px; color: #fff; background: var(--brand); padding: 2px 6px; border-radius: 4px; }
.desc { color: var(--muted); margin: 6px 0 12px; }
.footer { display: flex; justify-content: space-between; align-items: center; }
.btn { line-height: 1; }

.sold { color: var(--muted); margin-left: 8px; }

.product-card.compact { margin: 0; }
.product-card.compact .cover { height: 160px; }
.product-card.compact .title { display:-webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; white-space: normal; }
.product-card.compact .desc { display: none; }
.product-card.compact .btn { display: none; }
