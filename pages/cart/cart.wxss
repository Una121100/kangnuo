.item { display: flex; align-items: center; padding: 8px 0; border-bottom: 1px solid #f0f0f0; }
.item:last-child { border-bottom: none; }
.thumb { width: 68px; height: 68px; border-radius: 8px; margin-right: 10px; }
.meta { flex: 1; }
.name { font-weight: 600; display:block; }
.qty { margin-top: 6px; display:flex; align-items:center; }
.count { margin: 0 8px; }
.subtotal { font-weight: 600; }
.total { display:flex; justify-content: space-between; padding: 12px 0; }
