/* 主题色与通用样式（康诺风格：红色主色） */
:root {
  --brand: #f44;
  --text: #333;
  --muted: #999;
  --bg: #f7f8fa;
  --card: #ffffff;
}

page {
  background: var(--bg);
  color: var(--text);
}

.container {
  padding: 12px;
}

.card {
  background: var(--card);
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.btn {
  display: inline-block;
  padding: 10px 14px;
  border-radius: 6px;
  background: var(--brand);
  color: #fff;
  font-weight: 600;
}

.price {
  color: var(--brand);
  font-weight: 600;
}
